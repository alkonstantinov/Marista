                                </div>
                            </aside>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <div class="container">
                    <div class="social-links left">
                        <a target="_blank" class="social-link facebook" href="#" title="" data-toggle="tooltip" data-original-title="Facebook">
                            <span class="fa fa-facebook"></span>
                        </a>
                        <a target="_blank" class="social-link twitter" href="#" title="" data-toggle="tooltip" data-original-title="Twitter">
                            <span class="fa fa-twitter"></span>
                        </a>
                    </div>
                    <div class="copyright right">
                        © Copyright Marista Store. All Rights Reserved.
                    </div>
                </div>
            </div>
        </div>


    </div>


    @RenderSection("scripts", required: false)
    <script>
        function SendFeedback() {
            $("label[id^='lVal']").hide();
            var name = $("#name").val();
            var email = $("#email").val();
            var subject = $("#subject").val();
            var message = $("#message").val();
            var ok = true;
            if (name === "") {
                $("#lValName").show();
                ok = false;
            }
            if (email === "") {
                $("#lValEmail").show();
                ok = false;
            }
            if (subject === "") {
                $("#lValSubject").show();
                ok = false;
            }
            if (message === "") {
                $("#lValMessage").show();
                ok = false;
            }
            if (!ok)
                return;

            $.ajax({
                url: "/home/sendfeedback",
                method: "POST",
                cache: false,
                data: { Name: name, Email: email, Subject: subject, Message: message },
                async: false,

            }).done(function (res) {

            }).fail(function (jqXHR, textStatus) {
                alert(jqXHR);
            });

            $("#name").val("");
            $("#email").val("");
            $("#subject").val("");
            $("#message").val("");
            $("#lValOK").show();
        }

        function fbshareCurrentPage() {
            window.open("https://www.facebook.com/sharer/sharer.php?u=" + encodeURIComponent(window.location.href) + "&t=" + document.title, '',
                'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=300,width=600');
            return false;
        }
        function tweetCurrentPage() {
            window.open("https://twitter.com/share?url=" + encodeURIComponent(window.location.href) + "&text=" + encodeURIComponent(document.title), '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=300,width=600'); return false;
        }

    </script>
