                                <form class="" method="POST" enctype="multipart/form-data" id="contact_form">
                                    <div>
                                        <label id="name_label" for="name" class="control-label">Name:</label>
                                        <input type="text" class="form-control" id="name" name="name" value="">
                                        <label id="lValName" class="text-danger" style="display:none">Please, enter value</label>
                                    </div>
                                    <div>
                                        <label id="email_label" for="email" class="control-label">Email:</label>
                                        <input type="text" class="form-control" id="email" name="email" value="">
                                        <label id="lValEmail" class="text-danger" style="display:none">Please, enter value</label>
                                    </div>
                                    <div>
                                        <label id="subject_label" for="subject" class="control-label">Subject:</label>
                                        <input type="text" class="form-control" id="subject" name="subject" value="">
                                        <label id="lValSubject" class="text-danger" style="display:none">Please, enter value</label>
                                    </div>
                                    <div>
                                        <label id="message_label" for="message" class="control-label">Message:</label>
                                        <textarea name="message" value="" class="form-control" id="message" rows="3"></textarea>
                                        <label id="lValMessage" class="text-danger" style="display:none">Please, enter value</label>
                                    </div>
                                    <div class="right submit_container">
                                        <input class="btn btn-default" type="button" name="submit" id="submit_btn" value="send" onclick="SendFeedback()">
