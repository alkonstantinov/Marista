@model IList<Marista.Common.ViewModels.BPRegVM>

@{
    ViewBag.Title = "Index";
}

<h2>Not Approved</h2>
<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th width="400">Files</th>
                <th width="100">Approve</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.BPName</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a href="@Url.Action("Documents", new { bpId = b.BPId})" class="btn btn-default" title="View"><i class="glyphicon glyphicon-search"></i></a>
                            @b.FileName
                        </div>
                    </td>
                    <td>
                        <a href="@Url.Action("Approve", new { bpId = b.BPId})" class="btn btn-default" title="View"><i class="glyphicon glyphicon-check"></i></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
