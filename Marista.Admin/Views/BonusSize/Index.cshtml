@model PagedList.IPagedList<Marista.Common.ViewModels.BonusSizeVM>

@{
    ViewBag.Title = "Bonus Sizes";
}

<h2><a href="@Url.Action("Index")">@ViewBag.Title</a></h2>

<div class="row filters-panel">
    <div class="col-sm-3">
        <a href="@Url.Action("Create")" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Create new bonus size</a>
    </div>
    
</div>
<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th></th>
                <th width="200">From price</th>
                <th width="200">To price</th>
                <th width="">Bonus percent</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a href="@Url.Action("Details", new { id = b.BonusSizeId })" class="btn btn-default" title="View"><i class="glyphicon glyphicon-search"></i></a>
                            <a href="@Url.Action("Edit", new { id = b.BonusSizeId })" class="btn btn-info" title="Edit"><i class="glyphicon glyphicon-edit"></i></a>
                        </div>
                    </td>
                    <td>@b.FromBonus</td>
                    <td>@b.ToBonus</td>
                    <td>@b.BonusPercent</td>
                </tr>
            }
        </tbody>
    </table>
</div>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))